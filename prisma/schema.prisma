generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://admin:vcp2tbvff@localhost:5432/learnjapanese"
}

model User {
  id              String   @id
  score           Int      @default(0)
  badges          String[] @default(["Learner"])
  rank            String   @default("Learner")
  premium         Boolean  @default(false)
  enrolledDate    DateTime @default(now())
  lessonsComplete String[] @default(["0"])
  exams           String[] @default(["0"])

  @@unique(id)
  @@index(id)
}

enum Rank {
  Learner
  Intermediate
  Advanced
  Master
  NativeJapaneseSpeaker
  Contributor
  StaffMember
  Developer
}

enum Badge {
  Learner
  ConquerorOfHiragana
  VanquisherOfKatakana
  SubjugatorOfKanji
  OneHundred
  OneThousand
  TenThousand
  HundredThousand
  Million
  TenMillion
  AllAccessStudent
}
